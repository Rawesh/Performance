@using System.Data
@model DataSet


@{
    ViewBag.Title = "Edit band or artist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit band or artist</h2>

<form action="@Url.Action("EditSave", "BandArtist")" method="post">
    @foreach (DataRow row in Model.Tables[0].Rows)
    {
        <input type="hidden" name="id" value="@row["Id"]" runat="server" />
        <div class="form-group">
            <label>Name</label>
            <br />
            <input type="text" name="name" placeholder="Name" value="@row["Name"]" runat="server" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <br />
            <input type="text" name="description" placeholder="description" value="@row["Description"]" runat="server" />
        </div>
    }
    <input type="submit" value="Save" />
</form>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
