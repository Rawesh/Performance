@using System.Data
@model DataSet

@{
    ViewBag.Title = "Performances";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of performances</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Name Artist or Band</th>
        <th>Startdate</th>
        <th>Enddate</th>
        <th>Stage</th>
        <th colspan="3">Actions</th>
    </tr>
    @foreach (DataRow row in Model.Tables[0].Rows)
    {
<tr>
    <td>@row[1]</td>
    <td>@row[2]</td>
    <td>@row[3]</td>
    <td>@row[4]</td>
    <td>@Html.ActionLink("Edit", "Edit", new { @id = @row["Id"] })</td>
    <td>@Html.ActionLink("Details", "Details", new { @id = @row["Id"] })</td>
    <td>@Html.ActionLink("Delete", "Delete", new { @id = @row["Id"] })</td>

</tr>
    }
</table>
